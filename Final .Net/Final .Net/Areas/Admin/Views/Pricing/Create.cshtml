@using Core.Constants
@using Final_.Net.Areas.Admin.ViewModels.Pricing
@model PricingCreateVM
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">

                        <p class="card-description">
                            Create Pricing
                        </p>
                        <form enctype="multipart/form-data" method="post" asp-action="create" asp-controller="pricing" asp-area="admin" class="forms-sample">
                            <div class="form-group">
                                <label asp-for="Title">Title</label>
                                <input class="form-control" asp-for="Title">
                                <span asp-validation-for="Title"></span>
                            </div> 
                            <div class="form-group">
                                <label asp-for="Text">Text</label>
                                <input class="form-control" asp-for="Text">
                                <span asp-validation-for="Text"></span>
                            </div> 
                            <div class="form-group">
                                <label asp-for="Price">Price</label>
                                <input class="form-control" asp-for="Price">
                                <span asp-validation-for="Price"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Status">Status</label>
                                <select  class="form-control" asp-for="Status" asp-items="Html.GetEnumSelectList<PricingPosition>()">
                                </select>
                                <span asp-validation-for="Status"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description">Description</label>
                                <textarea class="form-control" asp-for="Description"> </textarea>
                                <span asp-validation-for="Description"></span>
                            </div>
                            
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.ckeditor.com/ckeditor5/35.2.1/classic/ckeditor.js"></script>
<script>
    ClassicEditor
        .create(document.querySelector('#Description'))
        .then(editor => {
            console.log(editor);
        })
        .catch(error => {
            console.error(error);
        });
</script>