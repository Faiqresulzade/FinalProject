@using Final_.Net.Areas.Admin.ViewModels.Pricing
@model PricingIndexVM

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Pricing</h4>
                        <form method="get" asp-action="index" asp-controller="pricing">
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label asp-for="Title"></label>
                                        <input class="form-control" asp-for="Title" />
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label asp-for="CreateAtEnd"></label>
                                        <input type="date" class="form-control" asp-for="CreateAtEnd" />
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label asp-for="CreateAtStart"></label>
                                        <input type="date" class="form-control" asp-for="CreateAtStart" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-primary" type="submit">Search</button>
                                </div>
                            </div>
                        </form>
                        <a class="btn btn-main" asp-action="create" asp-controller="pricing" asp-area="admin">Create Pricing</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Title</th>
                                        <th>Text</th>
                                        <th>Price</th>
                                        <th>Description</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var pricing in Model.Pricings)
                                    {
                                        <tr>
                                            <td>@pricing.Id</td>
                                            <td>@pricing.Title</td>
                                            <td>@pricing.Text</td>
                                            <td>@pricing.Price</td>
                                            <td>@Html.Raw(@pricing.Description)</td>
                                            <td>@pricing.Status</td>
                                            <td>
                                                <a class="btn btn-primary" asp-action="details" asp-controller="pricing" asp-area="admin" asp-route-id="@pricing.Id">Details</a>
                                                <a class="btn btn-danger" asp-action="delete" asp-controller="pricing" asp-area="admin" asp-route-id="@pricing.Id">Delete</a>
                                                <a class="btn btn-primary" asp-action="update" asp-controller="pricing" asp-area="admin" asp-route-id="@pricing.Id">Update</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>