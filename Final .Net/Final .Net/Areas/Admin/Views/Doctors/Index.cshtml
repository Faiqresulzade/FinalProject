@using Final_.Net.Areas.Admin.ViewModels.Doctors
@model DoctorsIndexVM
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Doctors</h4>
                        <a class="btn btn-main" asp-action="create" asp-controller="doctors" asp-area="admin">Create Doctors</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Photo</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>

                                        @foreach (var doctor in Model.Doctors)
                                        {

                                            <td>@doctor.Id</td>
                                            <td>@doctor.Title</td>
                                            <td>@doctor.Position</td>
                                            <td>
                                                <img class="w-25 p-3" src="~/assets/images/@doctor.PhotoName" />
                                            </td>
                                            <td>
                                                <a class="btn btn-primary" asp-action="details" asp-controller="doctors" asp-area="admin" asp-route-id="@doctor.Id">Details</a>
                                                <a class="btn btn-danger" asp-action="delete" asp-controller="doctors" asp-area="admin" asp-route-id="@doctor.Id">Delete</a>
                                                <a class="btn btn-primary" asp-action="update" asp-controller="doctors" asp-area="admin" asp-route-id="@doctor.Id">Update</a>
                                            </td>
                                        }
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        @*}*@

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>