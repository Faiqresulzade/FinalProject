@using Final_.Net.Areas.Admin.ViewModels.Doctors
@model DoctorsUpdateVM
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">

                        <p class="card-description">
                            Update Doctors
                        </p>
                        <form enctype="multipart/form-data" method="post" asp-action="update" asp-controller="doctors" asp-area="admin" class="forms-sample">
                            <div class="form-group">
                                <label asp-for="Title">Title</label>
                                <input class="form-control" asp-for="Title">
                                <span asp-validation-for="Title"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Name">Name</label>
                                <input class="form-control" asp-for="Name">
                                <span asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Position">Position</label>
                                <input class="form-control" asp-for="Position">
                                <span asp-validation-for="Position"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FacebookLink">FacebookLink</label>
                                <input class="form-control" asp-for="FacebookLink">
                                <span asp-validation-for="FacebookLink"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="TwitterLink">TwitterLink</label>
                                <input class="form-control" asp-for="TwitterLink">
                                <span asp-validation-for="TwitterLink"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="LinkedinLink">LinkedinLink</label>
                                <input class="form-control" asp-for="LinkedinLink">
                                <span asp-validation-for="LinkedinLink"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Photo">Photo</label>
                                <input class="form-control" asp-for="Photo">
                                <span asp-validation-for="Photo"></span>
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>