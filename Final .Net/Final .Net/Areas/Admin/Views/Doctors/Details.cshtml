@using Core.Entities
@model Doctors

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Doctor</h4>
                        <a class="btn btn-main" asp-action="create" asp-controller="doctors" asp-area="admin">Create Doctor</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Title</th>
                                        <th>Name</th>
                                        <th>Position</th>
                                        <th>FacebookLink</th>
                                        <th>TwitterLink</th>
                                        <th>LinkedinLink</th>
                                        <th>Photo</th>
                                        <th>Modified</th>
                                        <th>CreateAt</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>@Model.Id</td>
                                        <td>@Model.Title</td>
                                        <td>@Model.Name</td>
                                        <td>@Model.Position</td>
                                        <td>@Model.FacebookLink</td>
                                        <td>@Model.TwitterLink</td>
                                        <td>@Model.LinkedinLink</td>
                                        <td>
                                            <img class="w-25 p-3" src="/assets/images/@Model.PhotoName" />
                                        </td>
                                        <td>
                                            @Model.ModifiedAt
                                        </td>
                                        <td>@Model.CreateAt</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>