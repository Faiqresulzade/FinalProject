@using Final_.Net.Areas.Admin.ViewModels.WhyChoose
@model WhyChooseIndexVM


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Why Choose</h4>
                        @if (Model.WhyChoose == null)
                        {
                            <a class="btn btn-main" asp-action="create" asp-controller="whychoose" asp-area="admin">Create why Choose</a>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Title</th>
                                            <th>Text</th>
                                            <th>Photo</th>
                                            <th>Descriprtion</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>@Model.WhyChoose.Id</td>
                                            <td>@Model.WhyChoose.Title</td>
                                            <td>@Model.WhyChoose.Text</td>
                                            <td>
                                                <img class="w-25 p-3" src="~/assets/images/@Model.WhyChoose.Photo" />
                                            </td>
                                            <td>@Html.Raw(@Model.WhyChoose.Descriprtion)</td>

                                            <td>
                                                <a class="btn btn-primary" asp-action="details" asp-controller="whychoose" asp-area="admin" asp-route-id="@Model.WhyChoose.Id">Details</a>
                                                <a class="btn btn-danger" asp-action="delete" asp-controller="whychoose" asp-area="admin" asp-route-id="@Model.WhyChoose.Id">Delete</a>
                                                <a class="btn btn-primary" asp-action="update" asp-controller="whychoose" asp-area="admin" asp-route-id="@Model.WhyChoose.Id">Update</a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>