@using Final_.Net.Areas.Admin.ViewModels.WhyChoose
@model WhyChooseUpdateVM
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">

                        <p class="card-description">
                            Create About Us
                        </p>
                        <form enctype="multipart/form-data" method="post" asp-action="update" asp-controller="whychoose" asp-area="admin" class="forms-sample">
                            <div class="form-group">
                                <label asp-for="Title">Title</label>
                                <input class="form-control" asp-for="Title">
                                <span asp-validation-for="Title"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Text">Text</label>
                                <input class="form-control" asp-for="Text">
                                <span asp-validation-for="Text"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Descriprtion">Descriprtion</label>
                                <textarea class="form-control" asp-for="Descriprtion"> </textarea>
                                <span asp-validation-for="Descriprtion"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Photo">Photo</label>
                                <input class="form-control" asp-for="Photo">
                                <span asp-validation-for="Photo"></span>
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




<script src="https://cdn.ckeditor.com/ckeditor5/35.2.1/classic/ckeditor.js"></script>
<script>
    ClassicEditor
        .create(document.querySelector('#Descriprtion'))
        .then(editor => {
            console.log(editor);
        })
        .catch(error => {
            console.error(error);
        });
</script>